#include<stdio.h>
int main()
{
	int i,j;
	for(i=0;i<7;i++)
	{
		for(j=0;j<i;j++)
	{
	printf("07");	
	}
	printf("\n");
}
return 0;
}

or another type

#include<stdio.h>
int main()
{
	int i,j,n;
	printf("enter no of rows:");
	scanf("%d",&n);
	for(i=0;i<n;i++)
	{
		for(j=0;j<i;j++)
	{
	printf("01");	
	}
	printf("\n");
}
return 0;
}
